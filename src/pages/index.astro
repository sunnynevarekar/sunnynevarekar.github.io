---
import { getEntry } from 'astro:content';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeScript from '../components/ThemeScript.astro';
import SEO from '../components/SEO.astro';

const aboutEntry = await getEntry('about', 'index');
const data = aboutEntry.data;
const { Content } = await aboutEntry.render();

// Extract first paragraph from content for SEO description
const contentText = aboutEntry.body;
const firstParagraph = contentText.split('\n\n')[0].replace(/\n/g, ' ').trim();
const description = firstParagraph || `${data.name} - Personal website and blog`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <SEO 
      title={data.name}
      description={description}
      type="website"
      author={data.name}
      siteName={`${data.name}`}
      siteTitle={data.name}
      canonicalURL={Astro.url.toString()}
    />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <ThemeScript />
  </head>
  <body class="bg-white dark:bg-neutral-800 text-gray-900 dark:text-gray-100 antialiased min-h-screen flex flex-col">
    <div class="flex-1 p-8">
      <div class="max-w-2xl mx-auto space-y-12">
      <Header currentPage="home" />


      <!-- Magazine-Style About Section -->
      <section class="max-w-3xl mx-auto header-margin">
        <!-- Mobile Layout: Stacked -->
        <div class="block md:hidden space-y-6">
          <div class="flex justify-center">
            <div class="w-48 h-48 rounded-full bg-gray-100 dark:bg-neutral-700 overflow-hidden shadow-sm">
              <img 
                src={data.profileImage}
                alt={data.name}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <div class="prose prose-lg max-w-none text-left dark:prose-invert">
            <Content />
          </div>
        </div>

        <!-- Desktop Layout: Floated -->
        <div class="hidden md:block relative">
          <div class="float-right ml-10 mb-8 w-56 h-56 rounded-full bg-gray-100 dark:bg-neutral-700 overflow-hidden shadow-sm">
            <img 
              src={data.profileImage}
              alt={data.name}
              class="w-full h-full object-cover"
            />
          </div>
          
          <div class="prose prose-lg max-w-none text-left dark:prose-invert">
            <Content />
          </div>
          
          <!-- Clear float -->
          <div class="clear-both"></div>
        </div>
      </section>
      </div>
    </div>

    <Footer />
  </body>
  
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    .font-mono {
      font-family: 'JetBrains Mono', monospace;
    }
    
    /* Enhanced prose styles for better hierarchy */
    .prose {
      @apply text-gray-700 dark:text-gray-300 leading-loose font-normal text-base md:text-lg;
    }
    .prose p {
      @apply mb-6;
    }
    .prose strong {
      @apply font-semibold text-gray-900 dark:text-gray-100;
    }
    .prose em {
      @apply font-normal text-gray-600 dark:text-gray-400;
    }
    
    /* Override space-y for header margin */
    .header-margin {
      margin-top: 4rem !important;
    }
  </style>
</html>
