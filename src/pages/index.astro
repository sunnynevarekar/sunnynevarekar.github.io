---
import { getEntry } from 'astro:content';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeScript from '../components/ThemeScript.astro';
import SEO from '../components/SEO.astro';

const aboutEntry = await getEntry('about', 'index');
const data = aboutEntry.data;
const { Content } = await aboutEntry.render();

// Extract first paragraph from content for SEO description
const contentText = aboutEntry.body;
const firstParagraph = contentText.split('\n\n')[0].replace(/\n/g, ' ').trim();
const description = firstParagraph || `${data.name} - Personal website and blog`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <SEO 
      title={data.name}
      description={description}
      type="website"
      author={data.name}
      siteName={data.name}
      canonicalURL={Astro.url.toString()}
    />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <ThemeScript />
  </head>
  <body class="bg-white dark:bg-neutral-800 text-gray-900 dark:text-gray-100 antialiased min-h-screen flex flex-col">
    <div class="flex-1 p-8">
      <div class="max-w-2xl mx-auto space-y-12">
      <Header currentPage="home" />


      <!-- About Section -->
      <section>
        <div class="flex flex-col md:flex-row-reverse gap-8 md:gap-12 items-center md:items-start">
          <!-- Profile Image -->
          <div class="flex-shrink-0">
            <div class="w-48 h-48 md:w-56 md:h-56 rounded-full bg-gray-100 dark:bg-neutral-700 overflow-hidden shadow-sm">
              <img 
                src={data.profileImage} 
                alt={data.name}
                width="224"
                height="224"
                loading="eager"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          
          <!-- Content -->
          <div class="flex-1 prose prose-lg max-w-none text-left dark:prose-invert">
            <Content />
          </div>
        </div>
      </section>
      </div>
    </div>

    <Footer />
  </body>
  
  <style>
    /* Font families - applied via Tailwind classes in HTML */
    body {
      font-family: 'Inter', sans-serif;
    }
    .font-mono {
      font-family: 'JetBrains Mono', monospace;
    }
  </style>
</html>